	<script>
		$("#login-form").submit(
				function(e) {
					e.preventDefault()
					if ($("input[name='username']").val() == ""
							&& $("input[name='password']").val() == "") {
						console.log("Username and Password can not be blank!");
					} else if ($("input[name='username']").val() == "") {
						console.log("Username can not be blank!");
					} else if ($("input[name='password']").val() == "") {
						console.log("Password can not be blank!");
					} else {
						$.ajax({
							type : "post",
							url : "resources/scripts/login.jsp",
							data : $('#login-form').serialize(),
							dataType : "json",
							success : function(data) {
								if (!data.error) {
									location.href = "/milestonePlanner/dashboard"
								} else {
									console.log(data.msg);
								}
							},
							error : function(jqXHR, exception) {
								console.log("System Error " + jqXHR.responseText);
							}
						});
					}
				});
	</script>

